<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    android:background="@color/white"
    android:layout_marginBottom="5dp">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/primary_text"
        android:text="this is Title"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:id="@+id/db_item_title"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_below="@id/db_item_title"
        android:id="@+id/db_item_icon"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/db_item_title"
        android:text="this is abstract"
        android:textColor="@color/seconaary_text"
        android:textSize="13sp"
        android:layout_margin="5dp"
        android:id="@+id/db_item_abstract"
        android:layout_toLeftOf="@id/db_item_icon"/>
</RelativeLayout>
</android.support.v7.widget.CardView>