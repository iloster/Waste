<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detailLayout"
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/topic_detail_icon"
        android:background="@mipmap/default_head" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/topic_detail_icon"
        android:id="@+id/topic_detail_name"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/topic_detail_icon"
        android:layout_below="@id/topic_detail_name"
        android:id="@+id/topic_detail_time"
        android:layout_marginLeft="10dp"
        android:textColor="@color/seconaary_text"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topic_detail_title"
        android:layout_below="@id/topic_detail_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topic_detail_content"
        android:layout_below="@id/topic_detail_title"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/topic_detail_head"
        android:layout_below="@id/topic_detail_content"
        android:textSize="11sp"
        android:textColor="@color/primary_text"
        android:layout_marginTop="20dp"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/topic_detail_head"
        android:background="@color/divider" />
</RelativeLayout>