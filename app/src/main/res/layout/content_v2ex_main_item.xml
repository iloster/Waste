<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minHeight="80dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/topic_item_icon"
            android:layout_margin="5dp"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topic_item_name"
            android:text="iloster"
            android:layout_margin="3dp"
            android:textSize="11sp"
            android:textColor="#de000000"
            android:layout_toRightOf="@id/topic_item_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半小时之前"
            android:textSize="11sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/topic_item_time"
            android:layout_below="@id/topic_item_name"
            android:layout_toRightOf="@id/topic_item_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdssadkljsklbfjkbfjhbd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#de000000"
            android:textSize="15sp"
            android:layout_below="@id/topic_item_icon"
            android:id="@+id/topic_item_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:textSize="11sp"
            android:text="创造"
            android:padding="2dp"
            android:background="#f5f5f5"
            android:id="@+id/topic_item_node"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/topic_item_node"
            android:layout_below="@+id/topic_item_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="11sp"
            android:id="@+id/topic_item_reply"
            android:text="总共10个回复"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>