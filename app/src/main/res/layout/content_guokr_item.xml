<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:id="@+id/cardview_item_time"
        android:layout_marginTop="@dimen/x8"
        android:textSize="17sp"
        android:layout_marginBottom="@dimen/x5"
        android:text="今天" />
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/x2"
    card_view:cardElevation="@dimen/x2"
    android:layout_marginBottom="@dimen/x8"

    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/cardview_item_click">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/seconaary_text"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x5"
                android:id="@+id/guokr_item_source"
                android:text="source"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/seconaary_text"
                android:layout_marginRight="@dimen/x6"

                android:id="@+id/guokr_item_tag"
                android:background="#e0e0e0"
                android:padding="@dimen/x5"
                android:text="tag"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:padding="@dimen/x4">
            <ImageView
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x100"
                android:layout_alignParentRight="true"
                android:id="@+id/guokr_item_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guokr_item_title"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginBottom="@dimen/x5"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/sp17"
                android:lines="2"
                android:textColor="@color/primary_text"
                android:layout_toLeftOf="@id/guokr_item_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guokr_item_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/sp13"
                android:layout_below="@id/guokr_item_title"
                android:layout_toLeftOf="@id/guokr_item_icon"
                android:textColor="@color/seconaary_text"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>